<div class="items">  
  <% if item.completed? %>
    <hr>
    <%= link_to complete_list_item_path(@list, item.id), method: :patch do %><span class="transparent"><strike><%= item.task %></strike></span>
    <% end %>
    <%= link_to list_item_path(@list, item.id), method: :delete, data: { confirm: "Are you sure?" } do %>
      <i class="fa fa-trash"></i>
    <% end %>
  
  <% else %>
    <hr>
    <%= link_to complete_list_item_path(@list, item.id), method: :patch do %><%= item.task %>
    <% end %>
    <%= link_to list_item_path(@list, item.id), method: :delete, data: { confirm: "Are you sure?" } do %>
      <i class="fa fa-trash"></i>
    <% end %>
  <% end %>
</div>
