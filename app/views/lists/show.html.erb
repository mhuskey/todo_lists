<%= provide(:title, @list.title) %>

<div class="row">
  <div class="text-center col-md-6 col-md-offset-3">
    <h1><%= @list.title %></h1>
    
    <%= render @list.items %>
    
    <hr>
    <h2 class="text-center">
      <%= render 'items/form' %>
    </h2>
    
    <hr>
    <h2 class="text-center">
      <%= link_to "Edit",   edit_list_path %> |
      <%= link_to "Delete", @list, method: :delete, data: { confirm: "Are you sure?" } %> |
      <%= link_to "Back",   root_path %>
    </h2>
  </div>
</div>
